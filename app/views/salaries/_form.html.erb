<div class= "container">
<div class= "row justify-content-center">
<div class= "col-12">
<%= form_with model: @salary, url:user_salaries_path do |f| %>
<div class="form-group row">

        <%=f.label :month, class: "col-2 col-form-label" %>
        <div class="col-8">
        <%=f.text_field :month, class: "form-control shadow rounded" %>
        </div>
</div>

    <div class="form-group row">
       <%=f.label :year , class:"col-2 col-form-label"%>
       <div class="col-8">
       <%=f.text_field :year, class:"form-control shawdow rounded" %>
    </div>
    </div>
    <div class="form-group row">
       <%=f.label :date , class:"col-2 col-form-label"%>
       <div class="col-8">
       <%=f.text_field :date, class:"form-control shawdow rounded" %>
    </div>
    </div>
    <div class="form-group row">
       <%=f.label :Bonus_Comments , class:"col-2 col-form-label"%>
       <div class="col-8">
       <%=f.text_area :comments, class:"form-control shawdow rounded" %>
    </div>
    </div>

    <%=f.fields_for :additional_earning do |p| %>
    <div class="form-group row">
       <%=p.label :Extra_Hours, class:"col-2 col-form-label"%>
       <div class="col-8">
       <%=p.text_field :hours, class:"form-control shawdow rounded"%>
    </div>
    </div>

    <div class="form-group row">
       <%=p.label :Fixed_Bonus, class:"col-2 col-form-label"%>
       <div class="col-8">
       <%=p.text_field :fixed_bonus, class:"form-control shawdow rounded"%>
    </div>
    </div>

    <div class="form-group row">
       <%=p.label :Other_Bonus, class:"col-2 col-form-label"%>
       <div class="col-8">
       <%=p.text_field :other_bonus, class:"form-control shawdow rounded"%>
    </div>
    </div>
    <%end%>

    <%=f.fields_for :additional_deduction do |p| %>
    <div class="form-group row">
       <%=p.label :parking, class:"col-2 col-form-label"%>
       <div class="col-8">
       <%=p.text_field :parking, class:"form-control shawdow rounded"%>
     </div>
    </div>
    <div class="form-group row">
       <%=p.label :penalty, class:"col-2 col-form-label"%>
        <div class="col-8">
       <%=p.text_field :penalty, class:"form-control shawdow rounded"%>
    </div>
    </div> 
    <%end%>  
    <div class="form-group row justify-content-center">
    <%=f.submit class: "btn btn-outline-dark btn-lg " %>
    </div>



<%end%>
</div>

<%=link_to "Return to Employee Deatils", edit_user_path(@employee.id), class: "text-success" %>


</div>
</div>